# -*- mode: sh -*-

# editor
EDITOR=emacs

# go
GOPATH=$HOME/.gopath
PATH=$PATH:$GOPATH/bin
export GOPATH
export PATH
alias gr="go run *.go"

# Absolute path
alias ap='readlink -e "$1"'
alias unpushed='~/.bin/unpushed'
alias dockbash='~/.bin/dockbash'
alias e='emacsclient -c'
alias ed='emacs --daemon'
alias ek='emacsclient -e "(kill-emacs)"'
alias es='emacs'
alias ducks='for i in G M K; do du -ah | grep "[0-9]$i" | sort -nr -k 1; done | head -n 11'

function tardir() {
    tar -czvf "$1".tgz "$1"
}

function dbash() {
    docker exec -it $1 bash
}
